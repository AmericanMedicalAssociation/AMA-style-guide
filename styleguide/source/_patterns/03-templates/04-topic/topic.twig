<header>
  {% include 'organisms-ribbon' %}
</header>

<main class="topic container">
  <div class="grid grid-margin">
    <div class="topic_top col-width-12 grid-region">
      {% include 'atoms-page-title' %}
    </div>
  </div>

  <div class="topic_main grid grid-margin">
    <aside class="topic_rail-left col-width-3 grid-region">
      {% include 'organisms-topic-tools' with { 'class': 'grid-region_content' } %}
      {% include 'organisms-topic-promotion' with { 'class': 'grid-region_content' } %}
      {% include 'organisms-topic-topic-articles' with { 'class': 'grid-region_content' } %}
    </aside>

    <section class="topic_content col-width-6 grid-region">
      {% include 'organisms-topic-hero' with { 'class': 'grid-region_content' } %}
      {% include 'organisms-topic-related-articles' with { 'class': 'grid-region_content' } %}
    </section>

    <aside class="topic_rail-right col-width-3 grid-region">
      {% include 'organisms-topic-membership' with { 'class': 'grid-region_content' } %}
      {% include 'organisms-topic-related-content-list' with { 'class': 'grid-region_content' } %}
    </aside>
  </div>
  <div class="grid grid-margin">
    <div class="topic_bottom col-width-12 grid-region">
    </div>
  </div>
</main>

{% include 'organisms-footer' %}
