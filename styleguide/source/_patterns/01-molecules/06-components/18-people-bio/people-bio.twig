<section class="people-bio">
  <div class="people-bio_photo">
    <img src="{{ src|default('https://www.ama-assn.org/sites/default/files/styles/medium/public/media-browser/public/people/steven-stack.jpg?itok=r6UW84zq') }}" alt="{{ alt|default('Steven J Stack') }}"/>
  </div>
  <div class="people-bio_data">
    <div class="people-bio_data-min">
      <div class="people-bio_data_group">
        {% include 'atoms-h4' with { 'content': bio.name, 'class': 'b4 inline-bio_title' } %}
        {% include 'atoms-paragraph' with { 'content': bio.position } %}
        {% include 'molecules-field-group' with { 'label': 'Term', 'content': "#{bio.term_start} - #{bio.term_end}", 'class':'people-bio_data_field-term' } %}

        {% include 'atoms-paragraph' with { 'content': bio.specialty } %}
      </div>
      <div class="people-bio_data_group-right">
        {% include 'molecules-field-group' with { 'label': 'Affiliation', 'content': bio.affiliation } %}
        {% include 'molecules-field-group' with { 'label': 'Endorsement', 'content': bio.endorsement } %}
        {% include 'molecules-field-group' with { 'label': 'Email', 'content': bio.email } %}
      </div>
    </div>
    <div class="people-bio_data-anon">
      {% include 'molecules-field-group' with { 'label': 'Address' } %}
      {% include 'atoms-paragraph' with { 'content': bio.address1 } %}
      {% include 'atoms-paragraph' with { 'content': bio.address2 } %}
      {% include 'atoms-paragraph' with { 'content': bio.city_state_zip } %}
      {% include 'molecules-field-group' with { 'label': 'Positions', 'content': bio.positions } %}
      {% include 'molecules-field-group' with { 'label': 'Short Bio', 'content': bio.short_bio } %}
      {% include 'molecules-field-group' with { 'label': 'Long Bio', 'content': bio.long_bio } %}
    </div>

    <div class="people-bio_data-full">
      {% include 'molecules-field-group' with { 'label': 'Email', 'content': bio.email_private } %}
      {% include 'molecules-field-group' with { 'label': 'Fax', 'content': bio.fax } %}
      {% include 'molecules-field-group' with { 'label': 'Phone', 'content': bio.phone } %}
      {% include 'atoms-paragraph' with { 'content': bio.conflicts } %}
      {% include 'molecules-field-group' with { 'label': 'Spouse', 'content': bio.spouse } %}
      {% include 'molecules-field-group' with { 'label': 'Address' } %}
      {% include 'atoms-paragraph' with { 'content': bio.address1_private } %}
      {% include 'atoms-paragraph' with { 'content': bio.address2_private } %}
      {% include 'atoms-paragraph' with { 'content': bio.city_state_zip_private } %}
    </div>
  </div>
</section>
